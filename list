create database myDB;
drop database myDB;
drop table perfiles;
show databases;
show tables;
use myDB; -- ??
alter table perfiles modify column id int auto_increment; -- Modifica una columna ya creada
show create table perfiles; -- Escupe el comando para crear una tabla ya hecha 

CREATE TABLE `animales` (
  `id` int NOT NULL AUTO_INCREMENT,
  `tipo` varchar(255) DEFAULT NULL,
  `estado` varchar(255) DEFAULT NULL,
  PRIMARY KEY (`id`)
);

insert into animales (tipo, estado) values ('chanchito', 'feliz');
select * from animales where estado = 'triste' and tipo = 'felipe';

update animales set estado = 'feliz' where id = 3; 

